{
    "coc.preferences.jumpCommand": "tab drop",
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh",
                "bash"
            ]
        },
        "racket": {
            "command": "racket",
            "args": [
                "--lib",
                "racket-langserver"
            ],
            "filetypes": [
                "racket"
            ]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls-root",
                "compile_commands.json",
                ".vim/",
                ".git/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                }
            }
        }
    }
}
