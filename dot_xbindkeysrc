# Screen Brightness Controls
"brightnessctl s 5%-"
    XF86MonBrightnessDown

"brightnessctl s 5%-"
    F6

"brightnessctl s +5%"
    XF86MonBrightnessUp

"brightnessctl s +5%"
    F7

# Keyboard Brightness Controls
"kbdlight down 10"
    XF86KbdBrightnessDown

"kbdlight up 10"
    XF86KbdBrightnessUp

# Media Controls
"playerctl previous"
    XF86AudioPrev

"playerctl previous"
    Mod2+Mod4 + Prior

"playerctl play-pause"
    XF86AudioPlay

"playerctl play-pause"
    Mod2+Mod4 + Up

"playerctl stop"
    XF86AudioStop

"playerctl next"
    XF86AudioNext

"playerctl next"
    Mod2+Mod4 + Next

"playerctl next"
    m:0x50 + c:49

# Volume Conrols
"amixer set Master toggle"
    XF86AudioMute

"amixer set Master playback 2%-"
    XF86AudioLowerVolume

"amixer set Master playback 2%+"
    XF86AudioRaiseVolume

"amixer set Capture toggle"
    XF86AudioMicMute

# Print Screen
"scrot '%Y-%m-%d-%T.png' -e 'mv $f ~/tmp'"
    Print

"/home/sumner/bin/toggle-layout.sh"
    m:0x0 + c:51
