# Screen Brightness Controls
"xbacklight -5"
    XF86MonBrightnessDown

"xbacklight +5"
    XF86MonBrightnessUp

# Keyboard Brightness Controls
"kbdlight down 10"
    XF86KbdBrightnessDown

"kbdlight up 10"
    XF86KbdBrightnessUp

# Media Controls
"playerctl previous"
    XF86AudioPrev

"playerctl previous"
    Mod2+Mod4 + Prior

"playerctl play-pause"
    XF86AudioPlay

"playerctl play-pause"
    Mod2+Mod4 + Up

"playerctl next"
    Mod2+Mod4 + Next

"playerctl next"
    m:0x50 + c:49

# Volume Conrols
"amixer set Master toggle"
    XF86AudioMute

"amixer set Master playback 5%-"
    XF86AudioLowerVolume

"amixer set Master playback 5%+"
    XF86AudioRaiseVolume

"amixer set Capture toggle"
    XF86AudioMicMute

# Print Screen
"scrot '%Y-%m-%d-%T.png' -e 'mv $f ~/tmp'"
    Print

"/home/sumner/bin/toggle-layout.sh"
    backslash
